<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.canteen.mapper.MenucomponentMapper">
    <resultMap id="getMenucomponentMap" type="com.canteen.entity.Menucomponent">
        <id property="menucomponentId" column="menucomponentId"/>
        <result property="menuId" column="menuId"/>
        <result property="menuName" column="menuName"/>
        <result property="componentId" column="componentId"/>
        <result property="componentName" column="componentName"/>
        <result property="componentMoney" column="componentMoney"/>
        <result property="componentNum" column="componentNum"/>
    </resultMap>

    <select id="queryMenucomponentList" parameterType="java.lang.Integer" resultMap="getMenucomponentMap">
        SELECT 	*
        FROM menucomponent WHERE menuId = #{value}
    </select>
</mapper>
